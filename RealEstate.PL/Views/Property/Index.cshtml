@model IEnumerable<RealEstate.PL.ViewModels.Property.PropertyViewModel>

@{
    ViewData["Title"] = "Properties";
    Layout = "_LogedUser";
}

<div class="container shadow-lg p-4">
    <h1 class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
        <i class="bi bi-house-door"></i> Properties
    </h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>Price</th>
                    <th>Bedrooms</th>
                    <th>Bathrooms</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in Model)
                {
                    <tr>
                        <td>@property.Address</td>
                        <td>@property.Price.ToString("C")</td>
                        <td>@property.Bedrooms</td>
                        <td>@property.Bathrooms</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@property.Id" class="btn btn-outline-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@property.Id" class="btn btn-outline-danger ms-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-outline-primary">
            <i class="bi bi-plus-circle"></i> Add New Property
        </a>
    </div>
</div>
