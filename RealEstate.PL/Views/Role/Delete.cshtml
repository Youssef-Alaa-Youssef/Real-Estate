@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
    Layout = "_LogedUser";
}

<div class="container mt-4 shadow-lg p-4 bg-white rounded">
    <h2 class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewData["Title"]
    </h2>
    <form method="post" asp-action="DeleteConfirmed" asp-controller="Role">
        <input type="hidden" asp-for="Id" />

        <div class="alert alert-warning text-center">
            <p>
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Are you sure you want to delete the role "<strong>@Model.Name</strong>"?
            </p>
            <p>
                <i class="bi bi-info-circle-fill me-2"></i> This action cannot be undone.
            </p>
        </div>

        <div class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-trash me-2"></i> Delete Role
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </a>
        </div>
    </form>
</div>
