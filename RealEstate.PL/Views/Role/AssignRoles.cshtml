@model RealEstate.PL.ViewModels.Auth.ApplicationUserViewModel

@{
    ViewData["Title"] = "Assign Roles";
    Layout = "_LogedUser";
}

<div class="container mt-4 shadow-lg p-3 bg-white rounded">
    <h2 class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
        <i class="bi bi-person-check me-2"></i> @ViewData["Title"]
    </h2>
    <form method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label class="form-label">
                <i class="bi bi-person me-2"></i> User Name:
            </label>
            <p class="form-control-plaintext">@Model.UserName</p>
        </div>

        <div class="mb-4">
            <label class="form-label">
                <i class="bi bi-shield-check me-2"></i> Roles:
            </label>
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" class="form-check-input" />
                            <label for="selectAll" class="form-check-label">Select All</label>
                        </th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in ViewBag.Roles as List<SelectListItem>)
                    {
                        <tr>
                            <td>
                                <input type="checkbox"
                                       name="Roles"
                                       class="form-check-input role-checkbox"
                                       value="@role.Value"
                                       id="role-@role.Value"
                                @(Model.Roles.Contains(role.Value) ? "checked" : "") />
                            </td>
                            <td>
                                <label class="form-check-label" for="role-@role.Value">
                                    @role.Text
                                </label>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-save me-2"></i> Save Changes
            </button>
        </div>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const selectAllCheckbox = document.getElementById('selectAll');
        const roleCheckboxes = document.querySelectorAll('.role-checkbox');

        selectAllCheckbox.addEventListener('change', function () {
            roleCheckboxes.forEach(function (checkbox) {
                checkbox.checked = selectAllCheckbox.checked;
            });
        });
    });
</script>
