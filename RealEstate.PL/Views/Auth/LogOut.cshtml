@{
    ViewData["Title"] = "Log Out";
    Layout = "_LogedUser";
}

<section class="section dashboard container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body p-4">
                    <h1 class="card-title text-center mb-4">
                        <i class="bi bi-box-arrow-right me-2"></i> Log Out
                    </h1>
                    <hr>
                    <div class="text-center">
                        <h3 class="mb-4">Are you sure you want to log out?</h3>
                        <form asp-action="ActualLogOut" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-box-arrow-right me-2"></i> Log Out
                            </button>
                        </form>
                        <a asp-action="DashBoard" asp-controller="Home" class="btn btn-secondary px-4 ms-2">
                            <i class="bi bi-x-circle me-2"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
