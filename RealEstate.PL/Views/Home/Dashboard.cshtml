@model RealEstate.PL.ViewModels.Home.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_LogedUser";
}

<div class="container shadow-lg p-4">
    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Administrator"))
    {
        <h2 class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
            @ViewData["Title"]
        </h2>

        <div class="row text-center">
            <!-- Card for Users Count -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-light rounded h-100">
                    <div class="card-header bg-primary text-white d-flex align-items-center">
                        <i class="bi bi-person-circle fs-3 me-2"></i> Users
                    </div>
                    <div class="card-body bg-light d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title">Total Users</h5>
                        <p class="card-text display-4 text-primary">@Model.UserCount</p>
                        <p class="card-text">You have an amazing team of users!</p>
                    </div>
                </div>
            </div>

            <!-- Card for Team Members Count -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-light rounded h-100">
                    <div class="card-header bg-success text-white d-flex align-items-center">
                        <i class="bi bi-people fs-3 me-2"></i> Team Members
                    </div>
                    <div class="card-body bg-light d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title">Total Team Members</h5>
                        <p class="card-text display-4 text-success">@Model.TeamMemberCount</p>
                        <p class="card-text">Great job building a strong team!</p>
                    </div>
                </div>
            </div>

            <!-- Card for Contacts Count -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-light rounded h-100">
                    <div class="card-header bg-info text-white d-flex align-items-center">
                        <i class="bi bi-envelope fs-3 me-2"></i> Contacts
                    </div>
                    <div class="card-body bg-light d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title">Total Contacts</h5>
                        <p class="card-text display-4 text-info">@Model.ContactCount</p>
                        <p class="card-text">You're connecting with so many people!</p>
                    </div>
                </div>
            </div>

            <!-- Card for Roles Count -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-light rounded h-100">
                    <div class="card-header bg-warning text-dark d-flex align-items-center">
                        <i class="bi bi-lock fs-3 me-2"></i> Roles
                    </div>
                    <div class="card-body bg-light d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title">Total Roles</h5>
                        <p class="card-text display-4 text-warning">@Model.RoleCount</p>
                        <p class="card-text">Roles are perfectly defined and managed!</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h2 class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
            Dashboard
        </h2>
    }

    <div class="alert alert-success text-center mt-4 shadow-lg">
        <h4 class="alert-heading">You're Doing Great!</h4>
        <p>Keep up the fantastic work. Your management and engagement are making a big difference!</p>
        <hr>
        <p class="mb-0">If you need any help or have questions, feel free to reach out to support.</p>
    </div>
</div>
