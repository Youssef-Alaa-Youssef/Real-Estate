@model RealEstate.PL.ViewModels.Home.TeamMemberRepViewModel

@{
    ViewData["Title"] = "Team Members Report";
    Layout = "_LogedUser";
    int counter = 1;
}

<div class="container mt-5 shadow-lg p-4 rounded bg-white">
    <h2 class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
        <i class="bi bi-people me-2"></i> @ViewData["Title"]
    </h2>

    <div class="mt-4">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark text-light text-center">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Join Date</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model.TeamMembers)
                {
                    <tr>
                        <td>@member.Name</td>
                        <td>@member.Email</td>
                        <td>@member.Role</td>
                        <td class="text-center">@member.CreatedDate.ToString("MMM dd, yyyy")</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", "Team", new { id = member.Id })" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Delete", "Team", new { id = member.Id })" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this team member?');">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
