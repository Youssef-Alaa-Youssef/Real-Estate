<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #007bff;
            --secondary-color: gray;
            --background-color: #fff;
            --form-background-color: #f9f9f9;
            --text-color: #333;
            --label-color: #666;
            --border-color: #ccc;
            --shadow-color: rgba(0,0,0,0.1);
            --border-radius: 5px;
            --transition: all 0.3s ease;
        }

        body, html {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            overflow: hidden; 
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: var(--background-color);
        }

        .container {
            display: flex;
            width: 80vw;
            height: 80vh;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 4px 12px var(--shadow-color);
            background-color: var(--form-background-color);
            transition: var(--transition);
            animation: fadeIn 1s ease-in-out;
        }

        .image-section {
            flex: 1;
            position: relative;
            overflow: hidden;
        }

		.image-section img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .image-section:hover img {
            transform: scale(1.05);
        }
        .form-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-color: var(--form-background-color);
        }

        .tabs {
            display: flex;
            margin-bottom: 20px;
        }

        .tab-button {
            border: none;
            padding: 15px 25px;
            background-color: var(--secondary-color);
            cursor: pointer;
            margin: 0 5px;
            border-radius: var(--border-radius);
            font-size: 16px;
            font-weight: bold;
            transition: background-color var(--transition), color var(--transition);
        }

        .tab-button.active {
            background-color: var(--primary-color);
            color: #fff;
        }

        .form-content {
            display: none;
            width: 100%;
            max-width: 450px;
            background-color: var(--form-background-color);
            padding: 30px;
            border-radius: var(--border-radius);
            box-shadow: 0 4px 8px var(--shadow-color);
        }

        .form-content.active {
            display: block;
        }

        h2 {
            margin-bottom: 20px;
            font-size: 26px;
            color: var(--text-color);
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
            font-size: 14px;
            color: var(--label-color);
        }

        input {
            margin-bottom: 15px;
            padding: 15px;
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            font-size: 16px;
        }

        button {
            padding: 15px;
            background-color: var(--primary-color);
            color: #fff;
            border: none;
            border-radius: var(--border-radius);
            cursor: pointer;
            font-size: 16px;
            box-shadow: 0 2px 4px var(--shadow-color);
            transition: background-color var(--transition), transform var(--transition);
        }

        button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .social-login {
            display: flex;
            flex-direction: column;
            margin: 20px 0;
        }

        .social-button {
            display: flex;
            align-items: center;
            padding: 10px;
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            font-size: 16px;
            margin: 5px 0;
            box-shadow: 0 2px 4px var(--shadow-color);
            transition: background-color var(--transition), transform var(--transition);
        }

        .social-button img {
            width: 20px;
            margin-right: 10px;
        }

        .social-button:hover {
            background-color: var(--primary-color);
            color: #fff;
            transform: scale(1.05);
        }

        .forgot-password, .home-link {
            display: block;
            margin-top: 15px;
            text-align: center;
            color: var(--primary-color);
            text-decoration: none;
            font-size: 14px;
        }

        @@media (max-width: 768px) {
            .tabs {
                flex-direction: column;
            }

            .tab-button {
                width: 100%;
                box-sizing: border-box;
            }

            .form-content {
                max-width: 100%;
                padding: 15px;
            }

            h2 {
                font-size: 20px;
            }

            button, .social-button {
                font-size: 14px;
            }
        }

        @@media (max-width: 480px) {
            .image-section img {
                height: auto;
            }
        }
		@@keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div id="loader" class="spinner-container">
        @await Html.PartialAsync("_Loader")
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <script>
        function showTab(tabId) {
            document.querySelectorAll('.form-content').forEach(form => {
                form.classList.remove('active');
            });
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
            });

            document.getElementById(`${tabId}-form`).classList.add('active');
            document.querySelector(`.tab-button[onclick="showTab('${tabId}')"]`).classList.add('active');
        }

        document.addEventListener('DOMContentLoaded', () => showTab('login'));
    </script>
</body>
</html>
