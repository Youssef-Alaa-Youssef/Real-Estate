@model RealEstate.Models.ErrorViewModel

@{
    ViewData["Title"] = "Page Not Found";
    Layout = null; // Use no layout for this simple page
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8d7da;
        color: #721c24;
        text-align: center;
        margin: 0;
        padding: 0;
    }
    .container {
        max-width: 600px;
        margin: 100px auto;
        padding: 20px;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1 {
        font-size: 2.5em;
        margin-bottom: 20px;
    }
    p {
        font-size: 1.2em;
    }
    .request-id {
        margin-top: 20px;
        font-size: 0.9em;
        color: #6c757d;
    }
    a {
        color: #007bff;
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
</style>

<div class="container">
    <h1>404 - Page Not Found</h1>
    <p>Sorry, the page you are looking for does not exist.</p>
    @if (Model.ShowRequestId)
    {
        <p class="request-id">Request ID: @Model.RequestId</p>
    }
    <p><a href="/">Return to Homepage</a></p>
</div>

